%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% ページスタイルの設定
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% 通常ページ用 (本分で使用するページスタイル)
\fancypagestyle{princeton}{%
  \fancyhf{}%
  % 奇数ページ（右ページ）はヘッダ右側に「章名 + ページ番号」
  \fancyhead[RO]{\leftmark\ \hspace{1em} \thepage}%
  % 偶数ページ（左ページ）はヘッダ左側にページ番号のみ
  \fancyhead[LE]{\thepage}%
  \renewcommand{\headrulewidth}{0pt}%
  \renewcommand{\footrulewidth}{0pt}%
}

% 章始ページ用 (章扉): ページ番号のみを出す
\fancypagestyle{chapterstart}{%
  \fancyhf{}%
  % 右ページの場合：右上にページ番号、左ページの場合：左上にページ番号
  \fancyhead[RO]{\thepage}%
  \fancyhead[LE]{\thepage}%
  \renewcommand{\headrulewidth}{0pt}%
  \renewcommand{\footrulewidth}{0pt}%
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% 内部マクロの再定義
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\makeatletter

% ■ 章コマンドの再定義
% 第1章（\c@chapter が 0 のとき）は必ず右側ページ（\cleardoublepage）から開始
% それ以外は \clearpage。
% また、章扉は chapterstart スタイルを使用。
\renewcommand{\chapter}{%
  \ifnum\c@chapter=0
    \cleardoublepage % 第1章は右ページ強制
  \else
    \clearpage
  \fi
  \thispagestyle{chapterstart}%
  \secdef\@chapter\@schapter
}

% ■ 章見出しのフォーマット
% 出力例：「第1章　複素解析への序説」
\def\@makechapterhead#1{%
  {%
    \parindent \z@ 
    \raggedright 
    \normalfont
    \ifnum \c@secnumdepth >\m@ne
      \huge\bfseries 第\thechapter 章
    \fi
    \interlinepenalty\@M
    \Huge \bfseries #1\par\nobreak
    \vskip 40\p@% 見出し下の余白
  }%
  \vspace{5em}
}

% ■ ヘッダ用の章名設定
% デフォルトの \chaptermark は "Chapter 1. タイトル" のようになる場合があるため、
% 「第1章 タイトル」という形に再定義
\renewcommand{\chaptermark}[1]{%
  \markboth{第\thechapter 章\ #1}{}%
}

% ■ 目次の再定義
% 目次は右ページから開始し，ページ番号をローマ数字に変更
\renewcommand{\tableofcontents}{%
  \cleardoublepage
  \pagenumbering{roman}%
  \chapter*{\contentsname}%
  \begin{minipage}{\textwidth}%
    \@starttoc{toc}%
  \end{minipage}%
}

% ■ 目次中の章エントリの再定義（ドットリーダーなし・重ならない簡単配置）
\renewcommand{\l@chapter}[2]{%
  \vskip 1.5em%
  \@dottedtocline{0}{0em}{3em}{\bfseries #1}{\bfseries #2}%
}
\renewcommand{\l@section}[2]{%
  \@dottedtocline{1}{1.5em}{2em}{#1}{#2}%
}
\renewcommand{\l@subsection}[2]{%
  \@dottedtocline{2}{3em}{3em}{#1}{#2}%
}
\makeatother

